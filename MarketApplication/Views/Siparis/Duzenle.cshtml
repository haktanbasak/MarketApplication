@model MarketApplication.Models.Siparis

@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SiparisStatu> statuler = (List<SiparisStatu>)ViewBag.statuler;
}


<div class="container">
    <form method="post" action="/siparis/duzenle">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.SiparisId)
            @Html.HiddenFor(model => model.KullaniciId)
            @Html.HiddenFor(model => model.SaticiId)
            @Html.HiddenFor(model => model.Tutar)




            <select name="SiparisStatuId" class="">
                @foreach (var item in statuler)
                {
                    <option value="@item.SiparisStatuId">@item.Statu</option>
                }
            </select>

            @Html.ValidationMessageFor(model => model.SiparisStatuId, "", new { @class = "text-danger" })

       
                 <button type="submit" class="btn btn-success">Kaydet</button>
      
        </div>
    </form>


</div>

