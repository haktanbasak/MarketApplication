@using MarketApplication.Models
@model List<Sepet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var ToplamUcret = 0.0;

    foreach (var item in Model)
    {
        ToplamUcret += item.SepetTutar;
    }
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/assets/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Alışveriş Sepeti</h2>
                    <div class="breadcrumb__option">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Ürünler</th>
                                <th>Fiyat</th>
                                <th>Adet</th>
                                <th>Toplam</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="@item.Urun.Fotograf" alt="">
                                        <h5>@item.Urun.Ad</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        ₺@item.Urun.Fiyat
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <input type="text" value="@item.Adet">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="shoping__cart__total">
                                        ₺@item.SepetTutar
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <span class="icon_close"></span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="shoping__cart__btns">
                    <a href="/Home/Index" class="primary-btn cart-btn">Alışverişe Devam</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Sepet Toplam</h5>
                    <ul>
                        <li>Tutar <span>₺@ToplamUcret</span></li>
                    </ul>
                    <a href="/siparis" class="primary-btn">ÖDEMEYE DEVAM ET</a>
                </div>
            </div>
        </div>
    </div>
</section>


