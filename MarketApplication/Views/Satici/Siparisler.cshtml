@model IEnumerable<MarketApplication.Models.Siparis>

@{
    ViewBag.Title = "Siparisler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>
                Kullanıcı
            </th>
            <th>
                Sipariş durumu
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tutar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Kullanici.AdSoyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.siparisStatu.Statu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tutar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adres)
                </td>
                <td>
                    <a class="btn btn-success" href="/siparis/duzenle?id=@item.SiparisId">düzenle</a>
                </td>
            </tr>
        }

    </table>

</div>
